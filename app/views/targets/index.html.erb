<p id="notice"><%= notice %></p>

<h1>Posten</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ort</th>
      <th>Beschrieb</th>
      <th>Punkte</th>
      <th>Minen</th>
      <th>Count</th>
      <th>Letzte Aktion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @targets.each do |target| %>
      <tr>
        <td><%= target.name %></td>
        <td><%= target.village %></td>
        <td><%= target.description %></td>
        <td><%= target.points %></td>
        <td><%= target.mines %></td>
        <td><%= target.count %></td>
        <td><%= target.last_action.strftime("%H:%M:%S") %></td>
        <td><%= link_to 'Show', target %></td>
        <td><%= link_to 'Edit', edit_target_path(target) %></td>
        <td><%= link_to 'Destroy', target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Posten erstellen', new_target_path %>
