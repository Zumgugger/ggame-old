<p id="notice"><%= notice %></p>

<div class=row>
<h1>letzte Events</h1>

<table>
  <thead>
    <tr>
      <th>Zeit</th>
      <th>Gruppe</th>
      <th>Aktion</th>
       <th>Beschrieb</th>
      <th>Ziel</th>
      <th>Gruppenpunkte</th>
      <th>Zielpunkte</th>
     
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.time ? event.time.strftime("%H:%M:%S") : "-" %></td>
        <td><%= event.group.name %></td>       
        <td><%= event.option.name %></td> 
          
            <td><%= event.description %></td>
          
        <td>
            <%if%>
            <% event.option.name=="hat Gruppe fotografiert"%>
            <%= event.target_group.name %>
            <%elsif %>
            <%event.option.name=="hat Foto bemerkt" %>
            <%= event.target_group.name %>
            <%elsif %>
            <%event.option.name=="hat spioniert" %>
            <%= event.target_group.name %>
            <%elsif %>
            <%event.option.name=="hat Kopfgeld gesetzt" %>
            <%= event.target_group.name %>
            <%else %>
            <%= event.target.name %>
            <%end%>
    
                       </td>
        <td><%= event.group_points %></td>
        <td><%= event.target_points %></td>
    
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_event_path do %>
    <div class="blue">Neuer Event hinzuf√ºgen</div>
    
</div>
<%end%>

<div class= col-3 col-m-12>
    <h1>Gruppen</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Punkte</th>
      <th>Kopfegeld</th>
      <th>Mitglieder</th>
      <th>Falschinformation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.points %></td>
        <td><%= group.kopfgeld %></td>
        <td><%= group.member1 %> <%= group.member2 %> <%= group.member3 %> <%= group.member4 %></td>
        <td><%= group.false_information ? "ja!" : "nein"%></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
