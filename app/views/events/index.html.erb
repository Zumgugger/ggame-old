<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Zeit</th>
      <th>Gruppe</th>
      <th>Aktion</th>
       <th>Beschrieb</th>
      <th>Ziel</th>
      <th>Gruppenpunkte</th>
      <th>Zielpunkte</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.time ? event.time.strftime("%H:%M:%S") : "-" %></td>
        <td><%= event.group.name %></td>       
        <td><%= event.option.name %></td>            
        <td><%= event.description %></td>
        <td>
            <%if%>
            <% event.option.name=="hat Gruppe fotografiert"%>
            <%= event.target_group.name %>
            <%elsif %>
            <%event.option.name=="hat Foto bemerkt" %>
            <%= event.target_group.name %>
            <%else %>
            <%= event.target.name %>
            <%end%>
    
                       </td>
        <td><%= event.group_points %></td>
        <td><%= event.target_points %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

